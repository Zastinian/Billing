{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/i18n/*": [
        "./src/i18n/*"
      ],
      "@/layouts/*": [
        "./src/layouts/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/views/*": [
        "./src/views/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "public",
    ".astro",
    ".vscode",
    "dist",
    ".git",
    ".husky"
  ]
}
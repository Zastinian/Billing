---
import type { Categories } from "@/database/entities/Categories";

interface Props {
  category: Categories;
}

const { category } = Astro.props;
---

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <form action={`/api/admin/category/${category.id}`} method="POST" id="updateForm">
                <div class="card-body row">
                    <div class="form-group col-lg-4">
                        <label for="nameInput">Category Name</label>
                        <input
                            type="text"
                            name="name"
                            value={category.name}
                            class="form-control"
                            id="nameInput"
                            placeholder="Category Name"
                            required
                        />
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="descriptionInput">Description (Optional)</label>
                        <textarea name="description" class="form-control" id="descriptionInput">{ category.description }</textarea>
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="orderInput">Order (smaller = higher display priority)</label>
                        <input
                            type="number"
                            name="order"
                            value={category.order}
                            value="1000"
                            class="form-control"
                            id="orderInput"
                            placeholder="Order"
                            min="0"
                            max="1000"
                            required
                        />
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="orderInput">Global Limit (Optional)</label>
                        <input
                            type="number"
                            name="globalLimit"
                            value={category.globalLimit}
                            value=""
                            class="form-control"
                            id="globalLimitInput"
                            placeholder="Global Limit"
                            min="0"
                            max="1000"
                        />
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="orderInput">Per Client Limit (Optional)</label>
                        <input
                            type="number"
                            name="perClientLimit"
                            value={category.perClientLimit}
                            value=""
                            class="form-control"
                            id="perClientLimitInput"
                            placeholder="Per Client Limit"
                            min="0"
                            max="1000"
                        />
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="orderInput">Per Client Trial Limit (Optional)</label>
                        <input
                            type="number"
                            name="perClientTrialLimit"
                            value={category.perClientTrialLimit}
                            value=""
                            class="form-control"
                            id="perClientTrialLimitInput"
                            placeholder="Per Client Trial Limit"
                            min="0"
                            max="1000"
                        />
                    </div>
                </div>
            </form>
            <form action={`/api/admin/category/${category.id}/delete`} method="DELETE" id="deleteForm"></form>
            <div class="card-footer row justify-content-center">
                <button type="submit" form="updateForm" class="btn btn-success btn-sm col-lg-2 col-3">Save</button>
                <button type="submit" form="deleteForm" class="btn btn-danger btn-sm col-lg-2 col-3 offset-lg-1 offset-2">Delete</button>
            </div>
        </div>
    </div>
</div>

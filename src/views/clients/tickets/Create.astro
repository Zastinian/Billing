<form action="/api/client/tickets/new" method="POST">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body row">
                    <div class="form-group col-12">
                        <label for="subjectInput">Subject</label>
                        <input type="text" name="subject" class="form-control" id="subjectInput" placeholder="Ticket Subject" minlength="5" maxlength="255" required />
                    </div>
                    <div class="form-group col-12">
                        <label for="messageInput">Message</label>
                        <textarea
                            name="message"
                            class="form-control"
                            id="messageInput"
                            placeholder="30 characters required"
                            style="height:200px;"
                            minlength="30"
                            maxlength="500"
                            required></textarea>
                    </div>
                </div>
                <div class="card-footer row justify-content-center">
                    <a href="/client/tickets" class="btn btn-default btn-sm col-lg-1 col-md-3">Cancel</a>
                    <button type="submit" class="btn btn-success btn-sm col-lg-2 col-md-4 offset-1">Create Ticket</button>
                </div>
            </div>
        </div>
    </div>
</form>

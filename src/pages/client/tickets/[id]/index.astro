---
const { id } = Astro.params;

import Layout from "@/layouts/clients/Layout.astro";
import View from "@/views/clients/tickets/View.astro";

import { getLangFromUrl, useTranslatedPath } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

if (id === "2") {
	return Astro.rewrite("/404");
}
---

<Layout
    title=`Ticket #${id}`
    route="client.tickets.index"
    items={[
        { title: "Dashboard", url: translatePath("/client") },
        { title: "Tickets", url: translatePath("/client/tickets") },
    ]}
>
    <View />
</Layout>
